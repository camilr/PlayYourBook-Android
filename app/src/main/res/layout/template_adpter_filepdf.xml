<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/icon_epub"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/epub_ic"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/nombre_archivo_pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="HOLA"
                android:layout_toRightOf="@+id/icon_epub"
                />

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:id="@+id/direccion_archivo_pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_archivo_pdf"
                android:layout_toRightOf="@+id/icon_epub"
                android:text="/c:/archivo"
                android:textColor="#808080"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>